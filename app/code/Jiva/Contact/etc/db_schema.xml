<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="custom_contact">
        <column xsi:type="int"     name="id" padding="10" unsigned="true" nullable="false" comment="Entity Id"/>
        <column xsi:type="varchar" name="name"  nullable="false" length="255" comment="name"/>
        <column xsi:type="varchar" name="email"   nullable="false" length="255" comment="email"/>
        <column xsi:type="varchar"  name="phone_number"  nullable="false" length="255" comment="phone number"/>
        <column xsi:type="varchar" name="where_heard"   nullable="false" length="255"   comment="where did u heard from us"/>
        <column xsi:type="varchar" name="what_on_mind" nullable="false" length="255" comment="whats on ur mind " />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
